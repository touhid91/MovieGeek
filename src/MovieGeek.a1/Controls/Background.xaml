<UserControl x:Class="MovieGeek.a1.Controls.Background"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignWidth="480"
             d:DesignHeight="320">

    <Grid x:Name="LayoutRoot">
        <Grid>
            <Grid.Background>
            	<LinearGradientBrush EndPoint="0.748,0.762" MappingMode="RelativeToBoundingBox" StartPoint="0.252,0.199">
            		<GradientStop Color="Transparent" Offset="0.59"/>
            		<GradientStop Color="#19FFFFFF" Offset="0.525"/>
            		<GradientStop Color="Transparent" Offset="0.203"/>
            	</LinearGradientBrush>
            </Grid.Background>
        </Grid>

    </Grid>
</UserControl>